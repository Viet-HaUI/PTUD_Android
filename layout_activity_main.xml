<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0B"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="11">

        <TextView
            android:id="@+id/tvTenNhom"
            android:layout_width="353dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0B0B0B"
            android:gravity="bottom|center"
            android:text="Sản phẩm nhóm Việt, Dũng, Giáp"
            android:textColor="#F6F3F3"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="353dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="bottom|end"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="354dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="bottom|end"
            android:text="0"
            android:textSize="60sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="4"
        android:rowCount="5"
        tools:ignore="ExtraText">
        //Hang0
        <Button
            android:id="@+id/btAC"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#A5A7A9"
            android:text="AC"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btC"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="#A5A7A9"
            android:text="C"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btAmDuong"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="2"
            android:backgroundTint="#A5A7A9"
            android:text="+/-"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btChia"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="3"
            android:backgroundTint="#FF8200"
            android:text="/"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />
        //Hang1
        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#4E4E4E"
            android:text="7"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#4E4E4E"
            android:text="8"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#4E4E4E"
            android:text="9"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btNhan"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="3"
            android:backgroundTint="#FF8200"
            android:text="*"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />
        //Hang2
        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#4E4E4E"
            android:text="4"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#4E4E4E"
            android:text="5"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="#4E4E4E"
            android:text="6"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btTru"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="3"
            android:backgroundTint="#FF8200"
            android:ellipsize="middle"
            android:text="-"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />
        //Hang3
        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#4E4E4E"
            android:text="1"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="#4E4E4E"
            android:text="2"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="#4E4E4E"
            android:text="3"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btCong"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="3"
            android:backgroundTint="#FF8200"
            android:text="+"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />
        //Hang4
        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:backgroundTint="#4E4E4E"
            android:text="0"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btPhay"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="2"
            android:backgroundTint="#4E4E4E"
            android:text="."
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btBang"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="3"
            android:backgroundTint="#56360A"
            android:text="="
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btAns"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#1A1919"
            android:hapticFeedbackEnabled="false"
            android:text="Ans"
            android:textColor="#F6F2F2"
            android:textColorLink="#FDFDFD"
            android:textSize="24sp" />
    </GridLayout>


</LinearLayout>
